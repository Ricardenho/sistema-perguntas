
<%- include ('partials/head.ejs') %>
<%- include ('partials/navbar.ejs') %>
<body>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr><br>

        <form action="/responder" method="POST">
            <label for="">Responda</label>
            <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea><br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-success">Respoder</button>
        </form>
        
        <hr>
        <h3>Respostas</h3>

        
            <% respostas.forEach(respostas => { %>
                <br>
                <div class="card">
                    <div class="card-body"><h3>Resposta</h3></div>
                    <div class="card-footer"><p><%= respostas.corpo %></p><br></div>
                </div>      
            <% }) %> 
        
    </div>
</body>
<%- include ('partials/footer.ejs') %>